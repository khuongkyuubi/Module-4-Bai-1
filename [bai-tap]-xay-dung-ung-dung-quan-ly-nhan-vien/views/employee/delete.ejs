<div class="alert alert-danger" role="alert">
    Are you sure to delete employee <%= employee.name%>
</div>
<table class="table">
    <thead>
    <tr>
        <th scope="col">#</th>
        <th scope="col">ID</th>
        <th scope="col">Name</th>
        <th scope="col">Department</th>
        <th scope="col">Action</th>
    </tr>
    </thead>
    <tbody>

        <tr>
            <th scope="row"><%= index + 1%></th>
            <td><%= employee.ID %></td>
            <td><%= employee.name %></td>
            <td><%= employee.department %></td>
            <td><a href="/employee/delete?id=<%= employee.ID %>&index=<%= index %>"><form method="post"><button type="submit" class="btn btn-danger">Delete </button></form></a></td>
        </tr>


    </tbody>
</table>