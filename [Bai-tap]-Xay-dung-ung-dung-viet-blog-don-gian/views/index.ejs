<form class="mt-2" action="blog " method="post">
    <div class="form-group">
        <label for="tittle">Tittle blog</label>
        <input type="text" class="form-control" id="tittle" name="tittle" placeholder="tittle here">
    </div>
    <div class="form-group">
        <label for="body">Content blog</label>
        <textarea class="form-control" id="body" name="content" placeholder="body blog" rows="10"></textarea>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>